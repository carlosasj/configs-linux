[user]
	name = Carlos Schneider
	email = carlosaschjr@gmail.com
[core]
	editor = subl -w
[color]
	ui = true
	branch = auto
	diff = auto
	status = auto
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset - %<(60,trunc)%s %Creset(%C(bold blue)%<(15,trunc)%an %Creset%Cgreen%cr%Creset) %C(yellow)%d%Creset' --abbrev-commit --date=relative
	st = status
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
